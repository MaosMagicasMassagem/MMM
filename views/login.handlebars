<div class="container-form">
    <form class="form" action="/login" method="post">
        <h1>Login</h1>
        {{#if isCreated}}
        <div class="alerts">
                {{message2}}
            </div>
        {{/if}}
        {{#if message}}
        <div class="alerts">
                {{message}}
            </div>
        {{/if}}
        <div class="log">
            <input type="email" name="email" placeholder="Digite o seu e-mail">
            <img src="/image/icons8-nova-mensagem-50 (1).png" alt="icone de email">
        </div>
        <div class="log">
            <input type="password" name="senha" placeholder="Digite sua senha">
            <img src="/image/icons8-senha-50.png" alt="icone de senha">
        </div>
        <input id="click-log" type="submit" value="Login">
        <a href="register" class="register">Não tem uma conta? Crie uma!</a>
        <a href="#">Esqueceu a senha?</a>
    </form>
</div>